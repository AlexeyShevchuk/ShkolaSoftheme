<Window x:Class="HW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <TextBox Name="ValueTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="TryBtn" Content="Try" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="TryBtnClick"/>
        <Label Content="Угадайте число" HorizontalAlignment="Left" Margin="144,10,0,0" VerticalAlignment="Top"/>
        <Label Name="TryCount" Content="Попытки: 3" HorizontalAlignment="Left" Margin="144,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Exit" Content="Exit" Margin="0,0,10,10" Click="ExitBtnClick" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
